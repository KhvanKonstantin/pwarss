{
  "name": "pwarss",
  "version": "0.0.1",
  "author": "Konstantin Khvan",
  "license": "Apache-2.0",

  "repository": "https://github.com/KhvanKonstantin/pwarss",
  "bugs": "https://github.com/KhvanKonstantin/pwarss/issues",

  "dependencies": {
    "mobx": "^5.0.3",
    "mobx-react": "^5.2.3",
    "mobx-react-devtools": "^6.0.1",
    "normalize.css": "^8.0.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-router-dom": "^4.3.1",
    "react-scripts-ts": "^2.16.0"
  },

  "scripts": {
    "start-ts": "CHOKIDAR_USEPOLLING=true CHOKIDAR_INTERVAL=1000 react-scripts-ts start",
    "build-ts": "react-scripts-ts build",
    "build-css": "node-sass-chokidar --include-path ./src src/index.scss -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --use-polling --polling-interval 1000 --include-path ./src src/index.scss -o src/ --watch",
    "start": "npm-run-all -p watch-css start-ts",
    "build": "npm-run-all build-css build-ts",
    "test": "CI=true react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject"
  },

  "devDependencies": {
    "@types/react-router": "^4.0.31",
    "@types/react-router-dom": "^4.3.1",
    "@types/jest": "^23.1.6",
    "@types/node": "^10.5.2",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "typescript": "^3.0.3"
  },

  "proxy": "http://localhost:8080"
}
